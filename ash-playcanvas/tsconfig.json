{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@core/*": ["src/core/*"],
            "@types/*": ["src/types/*"],
            "@game/*": ["src/game/*"],
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}