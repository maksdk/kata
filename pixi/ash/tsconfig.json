{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2018",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "paths": {
            "@core/*": ["src/*"],
            "@game/*": ["src/game/*"],
            "@systems/*": ["src/game/systems*"],
            "@components/*": ["src/game/components*"],
            "@graphics/*": ["src/game/graphics*"]
        },
        "types": [
            "pixi.js"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}